term xterm-256color
background_opacity 0.7
shell /bin/zsh
editor /opt/homebrew/bin/nvim

# ===== Font Configuration =====
font_family       JetBrainsMono Nerd Font
font_size         24.0
bold_font         auto
italic_font       auto
bold_italic_font  auto
disable_ligatures never

# ===== Performance =====
repaint_delay 4
sync_to_monitor yes

# ===== Mouse =====
mouse_hide_wait -3.0

# ===== Window =====
window_padding_width 16
remember_window_size yes
hide_window_decorations titlebar-only

# ===== Scrolling =====
scrollback_lines 10000
scrollback_pager_history_size 10
scroll_on_mouse_wheel yes
scroll_lines 3

# ===== Notifications =====
notify_on_cmd_finish invisible 20

# ===== Tab Bar =====
tab_bar_edge bottom
tab_bar_align left
tab_bar_style powerline
tab_powerline_style round
active_tab_font_style   bold
inactive_tab_font_style italic

# ===== Keybindings =====
enabled_layouts *

# Layout switching
map ctrl+alt+q goto_layout tall
map ctrl+alt+w goto_layout stack

# Window navigation
map ctrl+shift+left  neighboring_window left
map ctrl+shift+right neighboring_window right
map ctrl+shift+up    neighboring_window up
map ctrl+shift+down  neighboring_window down

# Tab management
map ctrl+t new_tab_with_cwd

# Font size
map ctrl+alt+j    change_font_size all -1
map ctrl+alt+k    change_font_size all +1
map ctrl+alt+up   change_font_size all +1
map ctrl+alt+down change_font_size all -1

# Scrolling
map ctrl+Up   move_to_start
map ctrl+Down move_to_end

# ===== Cursor Animation =====
cursor_trail 200
cursor_trail_decay 0.1 0.4
cursor_trail_start_threshold 2

# ===== Theme (Auto-switching based on system) =====
macos_colorspace default
include current-theme.conf
